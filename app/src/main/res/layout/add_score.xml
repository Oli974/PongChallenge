<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/nom_joueur"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="268dp"
    />

    <EditText
            android:layout_width="165dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:id="@+id/nouveauJoueur"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="260dp"
            android:hint="@string/nom_joueur"/>
    <Button
            android:text="@string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickEvent"
            android:id="@+id/ok" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="68dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickEvent"
            android:id="@+id/Cancel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/ok" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.576" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nouveauJoueur"/>

</android.support.constraint.ConstraintLayout>