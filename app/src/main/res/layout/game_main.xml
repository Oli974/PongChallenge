<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="landscape"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
>
    <Button
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@drawable/flatDark04"
            android:id="@+id/bt_left"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@drawable/flatDark05"
            android:id="@+id/bt_right"
            app:layout_constraintStart_toEndOf="@+id/bt_left" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <Button
            android:background="@drawable/flatDark02"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:id="@+id/bt_up"
            app:layout_constraintBottom_toTopOf="@+id/bt_down" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp" android:layout_marginBottom="32dp"/>
    <Button
            android:background="@drawable/flatDark09"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:id="@+id/bt_down" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/bt_a" android:background="@drawable/flatDark35"
            android:layout_marginTop="200dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_right" android:layout_marginLeft="308dp"
            android:layout_marginStart="308dp"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/bt_b" android:background="@drawable/flatDark36"
            app:layout_constraintStart_toEndOf="@+id/bt_a" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/bt_a"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
